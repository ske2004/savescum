import (
  "th.um"
  "window.um"
)

var (
  record: [60]real
  recordP: int
  lastTimestamp: real
  fps: real
)

fn avgFps() {
  fps = 0
  for i, datum in record {
    fps += datum
  }
  fps /= 60
}

fn limit*(to: int) {
  window::setTargetFps(to)
}

fn update*() {
  if th::delta > 0 {
    record[recordP] = 1000.0/(th::time-lastTimestamp)
    recordP++
    if recordP >= 60 {
      recordP = 0
    }
    avgFps()
  }
  lastTimestamp = th::time
}

fn getFps*(): real {
  return fps
}
