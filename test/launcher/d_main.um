import (
  "../../src/d_util.um"
  "../../src/d_test.um"
  "std.um"
)

fn init*() {
  d_test::isUnitTest(true)

  lf, err1 := d_util::readFileStr(d_test::pfx()+"local.txt")
  std::exitif(err1)

  gf, err2 := d_util::readFileStr("data/misc/global.txt")
  std::exitif(err2)
  
  std::assert(str(lf) == "I'm a local file!\n", "Invalid local file")
  std::assert(str(gf) == "I'm a global file!\n", "Invalid global file")

  printf("Ok\n")
}
